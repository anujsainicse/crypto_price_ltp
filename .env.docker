# Redis Configuration for Docker
# The redis host will be set to 'redis' in docker-compose
REDIS_HOST=redis
REDIS_PORT=6379

# IMPORTANT: Set a strong password for production!
# Generate one with: openssl rand -base64 32
# For local testing, you can leave this empty (not recommended for production)
REDIS_PASSWORD=

REDIS_DB=0
REDIS_TTL=7200  # 2 hours (increased for production)

# Application Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Service Configuration
SERVICE_RESTART_DELAY=10  # More conservative restarts in production
SERVICE_MAX_RETRIES=5     # Fewer retries to avoid spam

# Monitoring
HEALTH_CHECK_INTERVAL=60  # Less frequent checks in production
STATUS_UPDATE_INTERVAL=60
